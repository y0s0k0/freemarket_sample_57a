.login-wrapper
  .login-header
  = link_to image_tag("mercari-logo.svg", class: "login-mercari-logo"), root_path
    
  .login-main
    .login-main__head 
      %p
        アカウントをお持ちでない方はこちら
      .login-main__head__button
        = link_to step1_signup_index_path do
          新規会員登録

    .a
      .login-main__button
        .login-main__button__facebook
          = link_to root_path do
            Facebookでログイン
            %i.fab.fa-facebook-square

        .login-main__button__google
          = link_to root_path do
            Googleでログイン
            %i.fab.fa-google

      .signup-main__form
        .signup-main__form__email__input
        = form_for @user,url: root_path  method: :get, html:  do |f|
        = f.email_field :email, placeholder: 'メールアドレス', class: "signup-main__form__email__input" 
        
        .signup-main__form__password__input
        = f.password_field :password, placeholder: 'パスワード', class: "signup-main__form__password__input" 



