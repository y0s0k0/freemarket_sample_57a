.login-wrapper
  .login-header
    = image_tag "mercari-logo.svg", class: "login-mercari-logo" 

  .login-main
    .login-main__head 
      %p
        アカウントをお持ちでない方はこちら
      .login-main__head__button
        = link_to step1_signup_index_path do
          新規会員登録
    .a
      .login-main__button
        .login-main__button__facebook
          = link_to root_path do
            Facebookでログイン
            %i.fab.fa-facebook-square

        .login-main__button__google
          = link_to root_path do
            Googleでログイン
            %i.fab.fa-google

      .signup-main__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .signup-main__form__email
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: "signup-main__form__email__input"
          
          .signup-main__form__password
            = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: "signup-main__form__password__input"

          .login-robot-box
            = image_tag "iam_not_robot.png", class: "login-iam_not_robot" 

          .login-main__button__main
            = f.submit "ログイン", class: "login-main__button__main__button"

          .login-main__form__imformation-text
            %p 
              パスワードをお忘れの方

  = render partial: "items/footer"










